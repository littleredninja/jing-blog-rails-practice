<h1>Listing favorite_posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_posts.each do |favorite_post| %>
      <tr>
        <td><%= favorite_post.user_id %></td>
        <td><%= favorite_post.post_id %></td>
        <td><%= link_to 'Show', favorite_post %></td>
        <td><%= link_to 'Edit', edit_favorite_post_path(favorite_post) %></td>
        <td><%= link_to 'Destroy', favorite_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Favorite post', new_favorite_post_path %>
